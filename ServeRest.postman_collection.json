		{
			"name": "PostUsuario",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 201\", function () {\r",
							"    pm.response.to.have.status(201);\r",
							"});\r",
							"\r",
							"pm.test(\"Verificar resposta do cadastro de usuario\", function() {\r",
							"    const responseJson = pm.response.json();\r",
							"\r",
							"    pm.expect(responseJson.message).to.eql(\"Cadastro realizado com sucesso\");\r",
							"});\r",
							"\r",
							"\r",
							"let responseJson = pm.response.json();\r",
							"\r",
							"// Se o _id existir, vamos salvar como variavel de ambiente\r",
							"if (responseJson._id) {\r",
							"    pm.environment.set(\"userID\", responseJson._id);\r",
							"}"
						],
						"type": "text/javascript",
						"packages": {}
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"// primeiro geramos um número aleatório\r",
							"let numeroAleatorio = Math.floor(Math.random() * 100000);\r",
							"\r",
							"// montamos o email\r",
							"let email = `joao${numeroAleatorio}@fast.cesar.com`;\r",
							"\r",
							"// Salva o email como variável de ambiente\r",
							"pm.environment.set(\"userEmail\", email);"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"nome\": \"Joao Test\",\r\n    \"email\": \"{{userEmail}}\",\r\n    \"password\": \"joao123\",\r\n    \"administrador\": \"true\"\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{BaseUrl}}usuarios",
					"host": [
						"{{BaseUrl}}usuarios"
					]
				}
			},
			"response": []
		},
